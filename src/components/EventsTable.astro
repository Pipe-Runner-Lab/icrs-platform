---

import { events } from "../lib/data";

---

<div class="mx-auto lg:max-w-screen-2xl">
  
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    {events.map(event => (
      <div class="bg-gray-900 text-white rounded-lg overflow-hidden shadow-md flex xl:flex-row flex-col mb-4">
        <div class="relative xl:w-1/3 w-full">
          <img src={event.cover} alt={event.title} class="w-full h-full object-cover" transition:name=`playlist ${event.id} image` />
        </div>
        <div class="p-4 flex-1">
          <h3 class="text-xl font-semibold mb-2" transition:name={`playlist ${event.id} title`}>{event.title}</h3>
          <p class="text-sm text-gray-400 mb-4">{event.description}</p>
          <div class="text-sm text-gray-500 mb-4">{event.date}</div>
          {event.prizePool && <div class="text-sm text-gray-500 mb-4">${event.prizePool}</div>}
          <a href={`/events/${event.id}`} class="bg-customYellow text-gray-900 font-bold py-2 px-4 rounded hover:bg-customYellowHover"
          transition:name={`playlist ${event.id} box`}>
            PARTICIPATE &rarr;
          </a>
        </div>
      </div>
    ))}
  </div>
</div>
